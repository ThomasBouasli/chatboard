rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {

      match /users/{userId} {
        allow read: if request.auth.uid != null;
      }

      match /messages {
        allow read: if request.auth.uid != null;
      }

      match /messages/{messageId} {
        allow write, read: if request.auth.uid != null;
      }
      
    }
  }
}